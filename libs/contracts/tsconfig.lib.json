{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "types": ["node"],
        "target": "es2021",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*.ts"]
}
